<?xml version="1.0" encoding="UTF-8"?>
<NLGSpec xmlns="http://simplenlg.googlecode.com/svn/trunk/res/xml" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Recording name="NPPhraseSpec examples">
    <Record name="Possessive Spec">
      <Document>
        <child xsi:type="NPPhraseSpec">
          <headword cat="NOUN">
            <base>patient</base>
          </headword>
          <spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
            <headword cat="NOUN">
              <base>John</base>
            </headword>
          </spec>
        </child>
      </Document>
      <Realisation>John's patient.</Realisation>
    </Record>
    <Record name="Determiner Spec">
      <Document>
        <child xsi:type="NPPhraseSpec">
          <headword cat="NOUN">
            <base>patient</base>
          </headword>
          <spec xsi:type="WordElement" cat="DETERMINER">
            <base>the</base>
          </spec>
        </child>
      </Document>
      <Realisation>The patient.</Realisation>
    </Record>
    <Record name="Complex NP">
      <Document>
        <child xsi:type="NPPhraseSpec">
          <headword cat="NOUN">
            <base>house</base>
          </headword>
          <spec xsi:type="CoordinatedPhraseElement" POSSESSIVE="true" conj="and">
            <coord xsi:type="NPPhraseSpec" PRONOMINAL="true">
              <headword cat="NOUN">
                <base>dog</base>
              </headword>
              <spec xsi:type="WordElement" cat="DETERMINER">
                <base>the</base>
              </spec>
            </coord>
            <coord xsi:type="NPPhraseSpec">
              <headword cat="NOUN">
                <base>woman</base>
              </headword>
              <spec xsi:type="WordElement" cat="DETERMINER">
                <base>the</base>
              </spec>
            </coord>
          </spec>
        </child>
      </Document>
      <Realisation>It and the woman's house.</Realisation>
    </Record>
    <Record name="Pronominal1">
      <Document>
        <child xsi:type="NPPhraseSpec" PRONOMINAL="true" NUMBER="PLURAL">
          <headword cat="NOUN">
            <base>house</base>
          </headword>
          <spec xsi:type="WordElement">
            <base>the</base>
          </spec>
        </child>
      </Document>
      <Realisation>They.</Realisation>
    </Record>
    <Record name="Pronominal2">
      <Document>
        <child xsi:type="NPPhraseSpec" PRONOMINAL="true" GENDER="FEMININE">
          <headword cat="NOUN">
            <base>singer</base>
          </headword>
          <spec xsi:type="WordElement">
            <base>the</base>
          </spec>
        </child>
      </Document>
      <Realisation>She.</Realisation>
    </Record>
    <Record name="Pronominal3">
      <Document>
        <child xsi:type="NPPhraseSpec" PRONOMINAL="true" POSSESSIVE="true" GENDER="FEMININE">
          <headword cat="NOUN">
            <base>singer</base>
          </headword>
          <spec xsi:type="WordElement">
            <base>the</base>
          </spec>
        </child>
      </Document>
      <Realisation>Her.</Realisation>
    </Record>
    <Record name="Plural1">
      <Document>
        <child xsi:type="NPPhraseSpec" NUMBER="PLURAL">
          <headword cat="NOUN">
            <base>house</base>
          </headword>
          <spec xsi:type="WordElement">
            <base>the</base>
          </spec>
        </child>
      </Document>
      <Realisation>The houses.</Realisation>
    </Record>
    <Record name="Plural2">
      <Document>
        <child xsi:type="NPPhraseSpec" NUMBER="PLURAL">
          <headword cat="NOUN">
            <base>house</base>
          </headword>
          <spec xsi:type="CoordinatedPhraseElement" POSSESSIVE="true" conj="and">
            <coord xsi:type="NPPhraseSpec" PRONOMINAL="true">
              <headword cat="NOUN">
                <base>dog</base>
              </headword>
              <spec xsi:type="WordElement" cat="DETERMINER">
                <base>the</base>
              </spec>
            </coord>
            <coord xsi:type="NPPhraseSpec">
              <headword cat="NOUN">
                <base>woman</base>
              </headword>
              <spec xsi:type="WordElement" cat="DETERMINER">
                <base>the</base>
              </spec>
            </coord>
          </spec>
        </child>
      </Document>
      <Realisation>They and the women's houses.</Realisation>
    </Record>
    <Record name="NP + StringElement Premodifier">
      <Document>
        <child xsi:type="NPPhraseSpec">
          <preMod xsi:type="StringElement">
            <val>difficult</val>
          </preMod>
          <headword cat="NOUN">
            <base>patient</base>
          </headword>
          <spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
            <headword cat="NOUN">
              <base>John</base>
            </headword>
          </spec>
        </child>
      </Document>
      <Realisation>John's difficult patient.</Realisation>
    </Record>
    <Record name="NP + wordElement Premodifier">
      <Document>
        <child xsi:type="NPPhraseSpec">
          <preMod xsi:type="WordElement" cat="ADJECTIVE">
            <base>difficult</base>
          </preMod>
          <headword cat="NOUN">
            <base>patient</base>
          </headword>
          <spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
            <headword cat="NOUN">
              <base>John</base>
            </headword>
          </spec>
        </child>
      </Document>
      <Realisation>John's difficult patient.</Realisation>
    </Record>
    <Record name="NP + wordElement complement">
      <Document>
        <child xsi:type="NPPhraseSpec">
          <compl xsi:type="WordElement" cat="ADJECTIVE">
            <base>jack</base>
          </compl>
          <headword cat="NOUN">
            <base>patient</base>
          </headword>
          <spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
            <headword cat="NOUN">
              <base>doctor</base>
            </headword>
            <spec xsi:type="WordElement" cat="DETERMINER">
              <base>the</base>
            </spec>
          </spec>
        </child>
      </Document>
      <Realisation>The doctor's patient jack.</Realisation>
    </Record>
  </Recording>
</NLGSpec>
