<?xml version="1.0" encoding="utf-8"?>
<nlg:NLGSpec xmlns="http://simplenlg.googlecode.com/svn/trunk/res/xml"
	xmlns:nlg="http://simplenlg.googlecode.com/svn/trunk/res/xml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://simplenlg.googlecode.com/svn/trunk/res/xml ">

	<Recording name="NPPhraseSpec examples">
		<Record name="Possessive Spec">
			<Document>
				<child xsi:type="NPPhraseSpec">
					<headword xsi:type="WordElement" cat="NOUN">
						<base>patient</base>
					</headword>
					<spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
						<headword xsi:type="WordElement" cat="NOUN">
							<base>John</base>
						</headword>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Determiner Spec">
			<Document>
				<child xsi:type="NPPhraseSpec">
					<headword xsi:type="WordElement" cat="NOUN">
						<base>patient</base>
					</headword>
					<spec xsi:type="WordElement" cat="DETERMINER">
						<base>the</base>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Complex NP">
			<Document>
				<child xsi:type="NPPhraseSpec" number="PLURAL">
					<headword xsi:type="WordElement" cat="NOUN">
						<base>house</base>
					</headword>
					<spec xsi:type="CoordinatedPhraseElement" conj="and"
						POSSESSIVE="true">
						<coord xsi:type="NPPhraseSpec" PRONOMINAL="true">
							<headword xsi:type="WordElement" cat="NOUN">
								<base>dog</base>
							</headword>
							<spec xsi:type="WordElement" cat="DETERMINER">
								<base>the</base>
							</spec>
						</coord>
						<coord xsi:type="NPPhraseSpec">
							<headword xsi:type="WordElement" cat="NOUN">
								<base>woman</base>
							</headword>
							<spec xsi:type="WordElement" cat="DETERMINER">
								<base>the</base>
							</spec>
						</coord>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Pronominal1">
			<Document>
				<child xsi:type="NPPhraseSpec" NUMBER="PLURAL" PRONOMINAL="true">
					<headword cat="NOUN">
						<base>house</base>
					</headword>
					<spec xsi:type="WordElement">
						<base>the</base>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Pronominal2">
			<Document>
				<child xsi:type="NPPhraseSpec" GENDER="FEMININE" PRONOMINAL="true">
					<headword cat="NOUN">
						<base>singer</base>
					</headword>
					<spec xsi:type="WordElement">
						<base>the</base>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Pronominal3">
			<Document>
				<child xsi:type="NPPhraseSpec" GENDER="FEMININE" PRONOMINAL="true"
					POSSESSIVE="true">
					<headword cat="NOUN">
						<base>singer</base>
					</headword>
					<spec xsi:type="WordElement">
						<base>the</base>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Plural1">
			<Document>
				<child xsi:type="NPPhraseSpec" NUMBER="PLURAL">
					<headword cat="NOUN">
						<base>house</base>
					</headword>
					<spec xsi:type="WordElement">
						<base>the</base>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="Plural2">
			<Document>
				<child xsi:type="NPPhraseSpec" NUMBER="PLURAL">
					<headword cat="NOUN">
						<base>house</base>
					</headword>
					<spec xsi:type="CoordinatedPhraseElement" POSSESSIVE="true"
						conj="and">
						<coord xsi:type="NPPhraseSpec" PRONOMINAL="true">
							<headword cat="NOUN">
								<base>dog</base>
							</headword>
							<spec xsi:type="WordElement" cat="DETERMINER">
								<base>the</base>
							</spec>
						</coord>
						<coord xsi:type="NPPhraseSpec">
							<headword cat="NOUN">
								<base>woman</base>
							</headword>
							<spec xsi:type="WordElement" cat="DETERMINER">
								<base>the</base>
							</spec>
						</coord>
					</spec>
				</child>
			</Document>
		</Record>

		<Record name="NP + StringElement Premodifier">
			<Document>
				<child xsi:type="NPPhraseSpec">
					<headword xsi:type="WordElement" cat="NOUN">
						<base>patient</base>
					</headword>
					<spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
						<headword xsi:type="WordElement" cat="NOUN">
							<base>John</base>
						</headword>
					</spec>
					<preMod xsi:type="StringElement">
						<val>difficult</val>
					</preMod>
				</child>
			</Document>
		</Record>

		<Record name="NP + wordElement Premodifier">
			<Document>
				<child xsi:type="NPPhraseSpec">
					<headword xsi:type="WordElement" cat="NOUN">
						<base>patient</base>
					</headword>
					<spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
						<headword xsi:type="WordElement" cat="NOUN">
							<base>John</base>
						</headword>
					</spec>
					<preMod xsi:type="WordElement" cat="ADJECTIVE">
						<base>difficult</base>
					</preMod>
				</child>
			</Document>
		</Record>

		<Record name="NP + wordElement complement">
			<Document>
				<child xsi:type="NPPhraseSpec">
					<headword xsi:type="WordElement" cat="NOUN">
						<base>patient</base>
					</headword>
					<spec xsi:type="NPPhraseSpec" POSSESSIVE="true">
						<spec xsi:type="WordElement" cat="DETERMINER">
							<base>the</base>
						</spec>
						<headword cat="NOUN">
							<base>doctor</base>
						</headword>
					</spec>
					<compl xsi:type="WordElement" cat="ADJECTIVE">
						<base>jack</base>
					</compl>
				</child>
			</Document>
		</Record>

	</Recording>
</nlg:NLGSpec>